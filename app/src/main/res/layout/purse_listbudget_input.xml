<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.reviewmerce.exchange.BankActivityFragment"
    android:clickable="true"
    android:id="@+id/mainLayout_purse_budgetInput"
    >
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:screenOrientation="portrait"
        android:orientation="vertical"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:id="@+id/purseMainLinear"
        >



        <TableLayout
            android:id="@+id/Layout_1_1"
            android:stretchColumns="1,2,3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffeeeeee"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:shrinkColumns="0"

            >
            <TableRow>
            <TextView
                android:id="@+id/tv_purse_budget_title1"
                android:layout_height="match_parent"
                android:layout_width="wrap_content"
                android:text="날짜"
                android:textSize="16dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:background="#ffffffff"
                android:singleLine="true"
                android:gravity="center_horizontal"
                />
            <TextView
                android:id="@+id/tv_purse_budget_date1"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:text="10/10"
                android:textSize="16dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:background="#ffffffff"
                android:singleLine="true"
                android:maxLength="30"
                android:gravity="center_horizontal"/>
            <TextView
                android:id="@+id/tv_purse_budget_dateline"
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:text=" ~ "
                android:textSize="16dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:background="#ffffffff"
                android:singleLine="true"/>
            <TextView
                android:id="@+id/tv_purse_budget_date2"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:text="10/20"
                android:textSize="16dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:background="#ffffffff"
                android:gravity="center_horizontal"
                android:maxLength="20"
                android:singleLine="true"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:id="@+id/tv_purse_budget_budget"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="16dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:background="#ff00ffff"
                    android:weightSum="0.7"
                    android:gravity="right"
                    android:width="200dp"
                    android:singleLine="true"/>
            </TableRow>
        </TableLayout>

        </LinearLayout>
</FrameLayout>