<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/catBackgroundColor"
    tools:context="com.reviewmerce.exchange.BankActivityFragment"
    android:clickable="true"
    android:id="@+id/mainLayout_bank"
    >

    <LinearLayout
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:clickable="true"
        android:screenOrientation="portrait"
        android:id="@+id/bankMainLinear"
        >
        <include layout="@layout/app_top_layout" />
        <include layout="@layout/fragment_header_bank"/>
        <ListView
            android:id="@+id/listBank"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:orientation="horizontal"
            android:paddingTop="0dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="0.8"
            android:fastScrollEnabled="false" />

        <TextView
            android:id="@+id/tvAd"
            android:layout_height="40dp"
            android:layout_width="wrap_content"
            android:textSize="10dp"
            android:textColor="#ff0066b4"
            android:text="이곳은 광고 영역 입니다."
            android:gravity="center_vertical|center_horizontal"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_gravity="center"
            />

    </LinearLayout>
</FrameLayout>