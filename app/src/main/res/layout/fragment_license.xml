<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.reviewmerce.exchange.BankActivityFragment"
    android:clickable="true"
    android:id="@+id/mainLayout_license"
    android:background="#ffffffff"
    >


    <ImageView
        android:id="@+id/ivHeader_license"
        android:layout_marginTop="30dp"
        android:layout_height="40dp"
        android:layout_width="fill_parent"
        android:background="@color/shippingMainTheme"
        android:scaleType="fitXY"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_weight="0.25"
        android:text="close"
        android:id="@+id/tvTitle_license"
        android:gravity="right"
        android:textColor="#ffffffff"
        android:layout_gravity="right"
        android:layout_marginRight="50dp"
        android:layout_marginTop="40dp"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        >
    <TextView
        android:id="@+id/tvText_license"
        android:layout_height="fill_parent"
        android:layout_width="fill_parent"
        android:textColor="#000000"
        android:scaleType="fitXY"
        android:layout_marginTop="30dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp" />
    </ScrollView>



</FrameLayout>