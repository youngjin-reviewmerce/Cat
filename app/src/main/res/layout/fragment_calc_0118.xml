<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:id="@+id/mainLayout_calc"
    android:background="#00000000"
    >
    <ImageView
        android:id="@+id/ivScreen"
        android:layout_height="fill_parent"
        android:layout_width="fill_parent"
        android:scaleType="fitXY"/>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:screenOrientation="portrait"
        android:orientation="vertical"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"

        android:paddingBottom="@dimen/activity_vertical_margin"
        android:id="@+id/calcMainLinear"
        android:background="#00444444"
        >

        <LinearLayout
            android:id="@+id/layoutButton"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="0.10"
            android:weightSum="1"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="24dp">
            <TextView
                android:id="@+id/btnExchange1"
                android:layout_centerHorizontal="true"
                android:layout_height="46dp"
                android:layout_width="70dp"
                android:textSize="20dp"
                android:textColor="#ffffffff"
                android:text="USD"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_gravity="left"
                android:background="@drawable/selector"
                android:gravity="bottom"
                android:weightSum="0.3"         />

            <TextView
                android:id="@+id/textExchange1"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text=""
                android:textSize="16dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:background="#ffffffff"
                android:weightSum="0.7"
                android:gravity="center_vertical|right"
                android:width="200dp"
                android:maxLength="20"
                android:singleLine="true"
                android:typeface="sans"
                />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/layout_tax"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="0.10"
            android:weightSum="1"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="12dp">

            <TextView
                android:id="@+id/btnExchange_tax"
                android:layout_centerHorizontal="true"
                android:layout_height="46dp"
                android:layout_width="70dp"
                android:textSize="20dp"
                android:textColor="#ffffffff"
                android:text="KRW"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_gravity="left"
                android:background="@drawable/selector"
                android:gravity="bottom"
                />

            <TextView
                android:id="@+id/textExchange_tax"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text=""
                android:textSize="16dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:background="#ffffffff"
                android:weightSum="0.7"
                android:gravity="center_vertical|right"
                android:width="200dp"
                android:singleLine="true"
                android:maxLength="20"
                android:typeface="sans"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout2"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="0.10"
            android:weightSum="1"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="12dp">

            <TextView
                android:id="@+id/btnExchange2"
                android:layout_centerHorizontal="true"
                android:layout_height="46dp"
                android:layout_width="70dp"
                android:textSize="20dp"
                android:textColor="#ffffffff"
                android:text="KRW"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_gravity="left"
                android:background="@drawable/selector"
                android:gravity="bottom"
                />

            <TextView
                android:id="@+id/textExchange2"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text=""
                android:textSize="16dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:background="#ffffffff"
                android:weightSum="0.7"
                android:gravity="center_vertical|right"
                android:width="200dp"
                android:singleLine="true"
                android:maxLength="20"
                android:typeface="sans"/>

        </LinearLayout>
        <TextView
            android:id="@+id/tvDate"
            android:layout_height="20dp"
            android:layout_width="wrap_content"
            android:textSize="10dp"
            android:textColor="#ffffffff"
            android:text="0"
            android:gravity="center_horizontal"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginTop="30dp"
            android:orientation="vertical">

            <TableLayout
                android:id="@+id/clac_row_1"
                android:stretchColumns="0,2,4,6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <TableRow>
                    <Button
                        android:id="@+id/button_clr"
                        android:layout_width="40dp"
                        android:layout_height="36dp"
                        android:gravity="center"
                        android:text="CLR"
                        android:background="@drawable/calc_btn_left"/>

                    <TextView
                        android:layout_height="match_parent"
                        android:layout_width="4dp"
                        />

                    <Button
                        android:id="@+id/button_chg"
                        android:layout_width="40dp"
                        android:layout_height="36dp"
                        android:gravity="center"
                        android:text="Chg"
                        android:background="@drawable/calc_btn_center"/>
                    <TextView
                        android:layout_height="match_parent"
                        android:layout_width="4dp"
                        />
                    <Button
                        android:id="@+id/button_del"
                        android:layout_width="40dp"
                        android:layout_height="36dp"
                        android:gravity="center"
                        android:text="Del"
                        android:background="@drawable/calc_btn_center"/>
                    <TextView
                        android:layout_height="match_parent"
                        android:layout_width="4dp"
                        />
                    <Button
                        android:id="@+id/button_div"
                        android:layout_width="40dp"
                        android:layout_height="36dp"
                        android:gravity="center"
                        android:text="/"
                        android:background="@drawable/calc_btn_right"/>
                </TableRow>
            </TableLayout>

            <TableLayout
                android:id="@+id/clac_row_2"
                android:stretchColumns="0,2,4,6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                >

                <TableRow>

                    <Button
                        android:id="@+id/button7"
                        android:layout_width="40dp"
                        android:layout_height="36dp"

                        android:text="7"
                        android:background="@drawable/calc_btn_left"/>
                    <TextView
                        android:layout_height="match_parent"
                        android:layout_width="4dp"
                        android:gravity="bottom"
                        />

                    <Button
                        android:id="@+id/button8"
                        android:layout_width="40dp"
                        android:layout_height="36dp"

                        android:text="8"
                        android:background="@drawable/calc_btn_center"/>
                    <TextView
                        android:layout_height="match_parent"
                        android:layout_width="4dp"
                        android:gravity="bottom"
                        />

                    <Button
                        android:id="@+id/button9"
                        android:layout_width="40dp"
                        android:layout_height="36dp"
                        android:text="9"
                        android:background="@drawable/calc_btn_center"/>

                    <TextView
                        android:layout_height="match_parent"
                        android:layout_width="4dp"
                        />
                    <Button
                        android:id="@+id/button_mul"
                        android:layout_width="40dp"
                        android:layout_height="36dp"
                        android:gravity="center"
                        android:text="*"
                        android:background="@drawable/calc_btn_right"/>
                </TableRow>
            </TableLayout>


            <TableLayout
                android:id="@+id/clac_row_3"
                android:stretchColumns="0,2,4,6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                >
                <TableRow>

                    <Button
                        android:id="@+id/button4"
                        android:layout_width="40dp"
                        android:layout_height="36dp"
                        android:text="4"
                        android:background="@drawable/calc_btn_left"/>
                    <TextView
                        android:layout_height="match_parent"
                        android:layout_width="4dp"
                        android:gravity="bottom"
                        />
                    <Button
                        android:id="@+id/button5"
                        android:layout_width="40dp"
                        android:layout_height="36dp"
                        android:text="5"
                        android:background="@drawable/calc_btn_center"/>
                    <TextView
                        android:layout_height="match_parent"
                        android:layout_width="4dp"
                        android:gravity="bottom"
                        />
                    <Button
                        android:id="@+id/button6"
                        android:layout_width="40dp"
                        android:layout_height="36dp"
                        android:text="6"
                        android:background="@drawable/calc_btn_center"/>
                    <TextView
                        android:layout_height="match_parent"
                        android:layout_width="4dp"
                        />
                    <Button
                        android:id="@+id/button_minus"
                        android:layout_width="40dp"
                        android:layout_height="36dp"
                        android:gravity="center"
                        android:text="-"
                        android:background="@drawable/calc_btn_right"/>

                </TableRow>
            </TableLayout>
            <TableLayout
                android:id="@+id/clac_row_4"
                android:stretchColumns="0,2,4,6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                >
                <TableRow>

                    <Button
                        android:id="@+id/button1"
                        android:layout_width="40dp"
                        android:layout_height="36dp"
                        android:text="1"
                        android:background="@drawable/calc_btn_left"/>
                    <TextView
                        android:layout_height="match_parent"
                        android:layout_width="4dp"
                        android:gravity="bottom"
                        />
                    <Button
                        android:id="@+id/button2"
                        android:layout_width="40dp"
                        android:layout_height="36dp"
                        android:text="2"
                        android:background="@drawable/calc_btn_center"/>
                    <TextView
                        android:layout_height="match_parent"
                        android:layout_width="4dp"
                        android:gravity="bottom"
                        />
                    <Button
                        android:id="@+id/button3"
                        android:layout_width="40dp"
                        android:layout_height="36dp"
                        android:text="3"
                        android:background="@drawable/calc_btn_center"/>
                    <TextView
                        android:layout_height="match_parent"
                        android:layout_width="4dp"
                        />
                    <Button
                        android:id="@+id/button_plus"
                        android:layout_width="40dp"
                        android:layout_height="36dp"
                        android:gravity="center"
                        android:text="+"
                        android:background="@drawable/calc_btn_right"/>
                </TableRow>
            </TableLayout>


            <TableLayout
                android:id="@+id/clac_row_5"
                android:stretchColumns="0,2,4,6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                >
                <TableRow>

                    <Button
                        android:id="@+id/button0"
                        android:layout_width="40dp"
                        android:layout_height="36dp"
                        android:text="0"
                        android:background="@drawable/calc_btn_left"/>
                    <TextView
                        android:layout_height="match_parent"
                        android:layout_width="4dp"
                        />
                    <Button
                        android:id="@+id/button_blank"
                        android:layout_width="40dp"
                        android:layout_height="36dp"
                        android:text="test"
                        android:background="@drawable/calc_btn_center"/>
                    <TextView
                        android:layout_height="match_parent"
                        android:layout_width="4dp"
                        />
                    <Button
                        android:id="@+id/button_dot"
                        android:layout_width="40dp"
                        android:layout_height="36dp"
                        android:text="."
                        android:background="@drawable/calc_btn_center"/>
                    <TextView
                        android:layout_height="match_parent"
                        android:layout_width="4dp"
                        />
                    <Button
                        android:id="@+id/button_equal"
                        android:layout_width="40dp"
                        android:layout_height="36dp"
                        android:gravity="center"
                        android:text="="
                        android:background="@drawable/calc_btn_right"/>
                </TableRow>
            </TableLayout>
        </LinearLayout>

    </LinearLayout>
</FrameLayout>