<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.reviewmerce.exchange.BankActivityFragment"
    android:clickable="true"
    android:id="@+id/mainLayout_bank"
    >
    <ImageView
        android:id="@+id/ivScreen_bank"
        android:layout_height="fill_parent"
        android:layout_width="fill_parent"

        android:scaleType="fitXY"/>

    <LinearLayout
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:weightSum="1"
        android:clickable="true"
        android:screenOrientation="portrait"
        android:id="@+id/bankMainLinear"
        >
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"

            >
            <com.reviewmerce.exchange.custom.MyMenuBtn
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/btnMenu"
                android:layout_marginTop="5dp" />
            <ImageButton
                android:id="@+id/btnRefresh"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="right"
                android:layout_weight="0.02"
                android:background="@mipmap/ic_refresh" />
        </FrameLayout>


        <LinearLayout
            android:id="@+id/topLayout"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_weight="0.95"
            android:layout_marginTop="90dp"
            android:weightSum="1">

            <TextView
                android:id="@+id/btnCurrency"
                android:layout_centerHorizontal="true"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textSize="24dp"
                android:textStyle="bold"
                android:textColor="#ff0066b4"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_gravity="center"

                android:gravity="bottom"
                android:paddingTop="0dp"
                android:paddingBottom="0dp" />

            <TextView
                android:id="@+id/btnExchangeType"
                android:layout_centerHorizontal="true"
                android:layout_height="20dp"
                android:layout_width="wrap_content"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="#ff0066b4"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_gravity="center"

                android:gravity="bottom"
                android:paddingTop="0dp"
                android:paddingBottom="0dp" />
            <TextView
                android:id="@+id/tvInfo"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textSize="10dp"
                android:textColor="#ff0066b4"
                android:text=""
                android:gravity="center_horizontal"
                android:layout_gravity="center"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:paddingTop="10dp"/>
            <ListView
                android:id="@+id/listBank"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1"
                android:orientation="horizontal"
                android:paddingTop="10dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_weight="1"
                android:fastScrollEnabled="false" />

            <TextView
                android:id="@+id/tvAd"
                android:layout_height="40dp"
                android:layout_width="wrap_content"
                android:textSize="10dp"
                android:textColor="#ff0066b4"
                android:text="이곳은 광고 영역 입니다."
                android:gravity="center_vertical|center_horizontal"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_gravity="center"
                />

        </LinearLayout>

    </LinearLayout>
</FrameLayout>