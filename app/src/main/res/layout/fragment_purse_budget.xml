<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:clickable="true"
    android:id="@+id/purseLayout_budget"
    android:background="#ffffff">
    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/ivHeader"
            android:layout_height="30dp"
            android:layout_width="fill_parent"
            android:src="@drawable/header_one"
            android:scaleType="fitXY"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_weight="0.25"
            android:text="@string/purse_topheader"
            android:id="@+id/tvHeader"
            android:gravity="center"
            android:layout_marginLeft="40dp"
            android:textColor="#ffffff"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:id="@+id/tvHeaderValue"
            android:layout_gravity="right"
            android:layout_weight="0.02"
            android:text="확인"
            android:gravity="center_vertical"
            android:textColor="#ffffffff"
            android:textStyle="bold"
             />
    </FrameLayout>

    <TableLayout
        android:id="@+id/Layout_1_1"
        android:stretchColumns="1,2,3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffeeeeee"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="1dp"
        android:shrinkColumns="0"

        >
        <TableRow>
        <TextView
            android:id="@+id/tv_purse_budget_datetitle"
            android:layout_height="match_parent"
            android:layout_width="140dp"
            android:text="날짜"
            android:textSize="16dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:background="#ffffffff"
            android:singleLine="true"
            android:gravity="center_horizontal"
            />
        <TextView
            android:id="@+id/tv_purse_budget_date1"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:text="10/10"
            android:textSize="16dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:background="#ffffffff"
            android:singleLine="true"
            android:maxLength="30"
            android:gravity="center_horizontal"/>
        <TextView
            android:id="@+id/tv_purse_budget_dateline"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text=" ~ "
            android:textSize="16dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:background="#ffffffff"
            android:gravity="center_horizontal"
            android:singleLine="true"/>
        <TextView
            android:id="@+id/tv_purse_budget_date2"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:text="10/20"
            android:textSize="16dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:background="#ffffffff"
            android:gravity="center_horizontal"
            android:maxLength="20"
            android:singleLine="true"/>
        </TableRow>
    </TableLayout>
    <TableLayout
        android:id="@+id/Layout_1_2"
        android:stretchColumns="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffeeeeee"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="10dp"
        android:paddingBottom="0dp"
        android:shrinkColumns="0"

        >
        <TableRow>
            <TextView
                android:id="@+id/tv_purse_budget_title_kor"
                android:layout_height="wrap_content"
                android:text="예산(원화)"
                android:textSize="16dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:background="#ffffffff"
                android:weightSum="0.7"
                android:gravity="center_horizontal"
                android:width="140dp"
                android:singleLine="true"/>

            <EditText
                android:id="@+id/et_purse_budget_value_kor"
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:text=""
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:weightSum="0.7"
                android:textSize="16dp"
                android:gravity="right"
                android:background="#ffffffff"
                android:singleLine="true"
                />
        </TableRow>

    </TableLayout>
    <TableLayout
        android:id="@+id/Layout_1_3"
        android:stretchColumns="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffeeeeee"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="10dp"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:shrinkColumns="0"
        >
        <TableRow>
            <TextView
                android:id="@+id/tv_purse_budget_title"
                android:layout_height="wrap_content"
                android:text="예산"
                android:textSize="16dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:background="#ffffffff"
                android:weightSum="0.7"
                android:gravity="center_horizontal"
                android:width="140dp"
                android:singleLine="true"/>

            <EditText
                android:id="@+id/et_purse_budget_value"
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:text=""
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:weightSum="0.7"
                android:textSize="16dp"
                android:gravity="right"
                android:background="#ffffffff"
                android:singleLine="true"
                />
        </TableRow>
    </TableLayout>
</LinearLayout>