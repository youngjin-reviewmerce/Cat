<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:id="@+id/mainLayout_calc"
    android:background="#00000000"
    >
    <ImageView
        android:id="@+id/ivScreen"
        android:layout_height="470dp"
        android:layout_width="fill_parent"
        android:scaleType="fitXY"/>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:screenOrientation="portrait"
        android:orientation="vertical"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:id="@+id/calcMainLinear"
        android:background="#00444444"
        >
        <LinearLayout
            android:id="@+id/layoutButton"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="24dp">
            <TextView
                android:id="@+id/tv_title_exchange1"
                android:layout_height="30dp"
                android:layout_width="50dp"
                android:textSize="12dp"
                android:textColor="#ffffffff"
                android:text="COST"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:weightSum="0.12"
                android:singleLine="true"
                android:gravity="center_vertical"
                />
            <FrameLayout
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/ivClearFrame"
                >
            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:maxWidth="16dp"
                android:maxHeight="16dp"
                android:id="@+id/ivClear"
                android:background="@drawable/calc_icon_wastebasket"
                android:scaleType="fitCenter"
                android:layout_gravity="center_vertical|center_horizontal"
                 />
            </FrameLayout>
            <TextView
                android:id="@+id/textExchange1"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text=""
                android:textSize="12dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:background="#ffffffff"
                android:gravity="center_vertical|right"
                android:width="110dp"
                android:maxLength="18"
                android:singleLine="true"
                android:typeface="sans"

                />
            <TextView
                android:id="@+id/textCurrency1"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="USD"
                android:textSize="12dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:background="#ffffffff"
                android:gravity="center_vertical"
                android:maxLength="20"
                android:singleLine="true"
                android:typeface="sans"
                android:layout_marginLeft="4dp"
                />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/layout_tax"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:weightSum="1"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="6dp">

            <TextView
                android:id="@+id/tv_title_tax"
                android:layout_centerHorizontal="true"
                android:layout_height="30dp"
                android:layout_width="50dp"
                android:textSize="12dp"
                android:textColor="#ffffffff"
                android:text="TAX"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:gravity="center_vertical"
                />
            <FrameLayout
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/ivTaxCheckFrame"
                >
            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:id="@+id/ivTaxCheck"
                android:background="@drawable/calc_icon_uncheck"
                android:scaleType="fitXY"
                android:layout_gravity="center_vertical|center_horizontal"
                />
            </FrameLayout>
            <TextView
                android:id="@+id/tv_edit_tax"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="10"
                android:textSize="12dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:background="#ffffffff"
                android:weightSum="0.7"
                android:gravity="center_vertical|right"
                android:width="110dp"
                android:singleLine="true"
                android:maxLength="18"
                android:typeface="sans"/>
            <TextView
                android:id="@+id/textTax"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="    %"
                android:textSize="12dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:background="#00ffffff"
                android:weightSum="0.7"
                android:gravity="center_vertical|right"
                android:maxLength="20"
                android:singleLine="true"
                android:typeface="sans"
                android:layout_marginLeft="4dp"
                 />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout2"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:weightSum="1"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="6dp">

            <TextView
                android:id="@+id/tv_title_exchange2"
                android:layout_centerHorizontal="true"
                android:layout_height="30dp"
                android:layout_width="50dp"
                android:textSize="12dp"
                android:textColor="#ffffffff"
                android:text="TOTAL"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_gravity="left"
                android:gravity="center_vertical"
                android:layout_weight="0.12"
                android:singleLine="true"
                />
            <FrameLayout
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/ivImage2Frame">
            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:id="@+id/ivImage2"
                android:background="#00000000"
                android:scaleType="fitXY"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_weight="0.06"
                />
            </FrameLayout>
            <TextView
                android:id="@+id/textExchange2"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text=""
                android:textSize="12dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:background="#ffffffff"
                android:weightSum="0.7"
                android:gravity="center_vertical|right"
                android:width="110dp"
                android:singleLine="true"
                android:maxLength="18"
                android:typeface="sans"

                />
            <TextView
                android:id="@+id/textCurrency2"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="KRW"
                android:textSize="12dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:background="#00ffffff"
                android:weightSum="0.12"
                android:gravity="center_vertical"
                android:typeface="sans"
                android:layout_marginLeft="4dp"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/tvDate"
            android:layout_height="20dp"
            android:layout_width="wrap_content"
            android:textSize="10dp"
            android:textColor="#ffffffff"
            android:text="0"
            android:gravity="center_horizontal"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginTop="30dp"
            android:orientation="vertical">

            <TableLayout
                android:id="@+id/clac_row_1"
                android:stretchColumns="0,2,4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <TableRow>
                    <Button
                        android:id="@+id/button_del"
                        android:layout_width="40dp"
                        android:layout_height="44dp"
                        android:gravity="center"
                        android:text="DEL"
                        android:background="@drawable/calc_selector"
                        android:textColor="#ffffffff"
                        />

                    <TextView
                        android:layout_height="match_parent"
                        android:layout_width="0dp"
                        />

                    <Button
                        android:id="@+id/button_dot"
                        android:layout_width="40dp"
                        android:layout_height="44dp"
                        android:gravity="center"
                        android:text="."
                        android:background="@drawable/calc_selector"
                        android:textColor="#ffffffff"
                        />
                    <TextView
                        android:layout_height="match_parent"
                        android:layout_width="0dp"
                        />
                    <Button
                        android:id="@+id/button_sign"
                        android:layout_width="40dp"
                        android:layout_height="44dp"
                        android:gravity="center"
                        android:text="TaxÂ±"
                        android:background="@drawable/calc_selector"
                        android:textColor="#ffffffff"
                        />
                </TableRow>
            </TableLayout>

            <TableLayout
                android:id="@+id/clac_row_2"
                android:stretchColumns="0,2,4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                >

                <TableRow>

                    <Button
                        android:id="@+id/button7"
                        android:layout_width="40dp"
                        android:layout_height="44dp"

                        android:text="7"
                        android:background="@drawable/calc_selector"
                        android:textColor="#ffffffff"

                        />
                    <TextView
                        android:layout_height="match_parent"
                        android:layout_width="0dp"
                        android:gravity="bottom"
                        />

                    <Button
                        android:id="@+id/button8"
                        android:layout_width="40dp"
                        android:layout_height="44dp"

                        android:text="8"
                        android:background="@drawable/calc_selector"
                        android:textColor="#ffffffff"
                        />
                    <TextView
                        android:layout_height="match_parent"
                        android:layout_width="0dp"
                        android:gravity="bottom"
                        />

                    <Button
                        android:id="@+id/button9"
                        android:layout_width="40dp"
                        android:layout_height="44dp"
                        android:text="9"
                        android:background="@drawable/calc_selector"
                        android:textColor="#ffffffff"
                        />

                </TableRow>
            </TableLayout>


            <TableLayout
                android:id="@+id/clac_row_3"
                android:stretchColumns="0,2,4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                >
                <TableRow>

                    <Button
                        android:id="@+id/button4"
                        android:layout_width="40dp"
                        android:layout_height="44dp"
                        android:text="4"
                        android:background="@drawable/calc_selector"
                        android:textColor="#ffffffff"
                        />
                    <TextView
                        android:layout_height="match_parent"
                        android:layout_width="0dp"
                        android:gravity="bottom"
                        />
                    <Button
                        android:id="@+id/button5"
                        android:layout_width="40dp"
                        android:layout_height="44dp"
                        android:text="5"
                        android:background="@drawable/calc_selector"
                        android:textColor="#ffffffff"
                        />
                    <TextView
                        android:layout_height="match_parent"
                        android:layout_width="0dp"
                        android:gravity="bottom"
                        />
                    <Button
                        android:id="@+id/button6"
                        android:layout_width="40dp"
                        android:layout_height="44dp"
                        android:text="6"
                        android:background="@drawable/calc_selector"
                        android:textColor="#ffffffff"
                        />

                </TableRow>
            </TableLayout>
            <TableLayout
                android:id="@+id/clac_row_4"
                android:stretchColumns="0,2,4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                >
                <TableRow>

                    <Button
                        android:id="@+id/button1"
                        android:layout_width="40dp"
                        android:layout_height="44dp"
                        android:text="1"
                        android:background="@drawable/calc_selector"
                        android:textColor="#ffffffff"
                        />
                    <TextView
                        android:layout_height="match_parent"
                        android:layout_width="0dp"
                        android:gravity="bottom"
                        />
                    <Button
                        android:id="@+id/button2"
                        android:layout_width="40dp"
                        android:layout_height="44dp"
                        android:text="2"
                        android:background="@drawable/calc_selector"
                        android:textColor="#ffffffff"
                        />
                    <TextView
                        android:layout_height="match_parent"
                        android:layout_width="0dp"
                        android:gravity="bottom"
                        />
                    <Button
                        android:id="@+id/button3"
                        android:layout_width="40dp"
                        android:layout_height="44dp"
                        android:text="3"
                        android:background="@drawable/calc_selector"
                        android:textColor="#ffffffff"
                       />
                </TableRow>
            </TableLayout>


            <TableLayout
                android:id="@+id/clac_row_5"
                android:stretchColumns="0,2,4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="0dp"
                >
                <TableRow>

                    <Button
                        android:id="@+id/button0"
                        android:layout_width="40dp"
                        android:layout_height="44dp"
                        android:text="0"
                        android:background="@drawable/calc_selector"
                        android:textColor="#ffffffff"
                        />
                    <TextView
                        android:layout_height="match_parent"
                        android:layout_width="0dp"
                        />
                    <Button
                        android:id="@+id/button00"
                        android:layout_width="40dp"
                        android:layout_height="44dp"
                        android:text="00"
                        android:background="@drawable/calc_selector"
                        android:textColor="#ffffffff"
                        />
                    <TextView
                        android:layout_height="match_parent"
                        android:layout_width="0dp"
                        />
                    <Button
                        android:id="@+id/button000"
                        android:layout_width="40dp"
                        android:layout_height="44dp"
                        android:text="000"
                        android:background="@drawable/calc_selector"
                        android:textColor="#ffffffff"
                        />

                </TableRow>
            </TableLayout>
        </LinearLayout>

    </LinearLayout>
</FrameLayout>