<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".MainActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/main_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/shippingMainTheme"
            >
            <LinearLayout
                android:id="@+id/Layout_1_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:gravity="center_vertical|center_horizontal"
                android:paddingTop="1dp"
                android:paddingBottom="1dp"
                >
                <TextView
                    android:layout_width="6dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    />
                <ImageButton
                    android:layout_width="28dp"
                    android:layout_height="36dp"
                    android:gravity="center_vertical|center_horizontal"
                    android:background="@drawable/icon_title"
                    android:id="@+id/main_toolbar_ibtitle"
                    android:layout_weight="3.7"
                    />
                <TextView
                    android:layout_width="10dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    />
                <ImageButton
                    android:layout_width="10dp"
                    android:layout_height="24dp"
                    android:text="search"
                    android:id="@+id/main_toolbar_calc"
                    android:visibility="visible"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:scaleType="fitXY"
                    android:background="@drawable/icon_calc"
                    android:layout_weight="0.6"
                    />
                <TextView
                android:layout_width="6dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                />

                <ImageButton
                    android:layout_width="10dp"
                    android:layout_height="24dp"
                    android:text="search"
                    android:id="@+id/main_toolbar_shopping"
                    android:visibility="visible"
                    android:scaleType="fitXY"
                    android:background="@drawable/icon_shopping"
                    android:layout_weight="0.8"
                    />

            </LinearLayout>
        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>

    <include layout="@layout/content_main" />
</android.support.design.widget.CoordinatorLayout>
