<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.reviewmerce.exchange.BankActivityFragment"
    android:clickable="true"
    android:id="@+id/mainLayout_purse"
    >
    <Button
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:id="@+id/btnNationSelect"
        android:background="#00000000"
        />
    <ImageView
        android:id="@+id/ivScreen"
        android:layout_height="640dp"
        android:layout_width="match_parent"
        android:scaleType="fitXY"
        android:layout_gravity="center_horizontal"/>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:weightSum="1"
        android:screenOrientation="portrait"
        android:orientation="vertical"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:id="@+id/purseMainLinear"
        >
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            >
            <com.reviewmerce.exchange.custom.MyMenuBtn
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/btnMenu"
                android:layout_marginTop="5dp" />
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/btnRefresh"
                android:layout_gravity="right" />
        </FrameLayout>

        <LinearLayout
            android:id="@+id/topLayout"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_weight="0.0001"
            android:layout_marginTop="110dp"
            android:layout_gravity="center_horizontal">

            <TextView
                android:id="@+id/tvCurrency"
                android:layout_centerHorizontal="true"
                android:layout_height="24dp"
                android:layout_width="wrap_content"
                android:textSize="16dp"
                android:textColor="#ff0066b4"
                android:textStyle="bold"
                android:layout_gravity="center" />
            <TextView
                android:layout_height="1dp"
                android:layout_width="14dp"
                android:layout_gravity="center"
                android:background="#ffff0000"
                android:layout_marginTop="5dp"
                android:id="@+id/tvSeperator"
                />
            <TextView
                android:id="@+id/tvConverted_value"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textSize="16dp"
                android:textColor="#ff0066b4"
                android:gravity="center_horizontal"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:text=""
                android:layout_marginTop="6dp"
                />

            <TextView
                android:id="@+id/tvDate"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textSize="10dp"
                android:textColor="#ff0066b4"
                android:text=""
                android:gravity="center_horizontal"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_gravity="center" />
        </LinearLayout>

    </LinearLayout>
</FrameLayout>